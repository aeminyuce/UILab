{
  "compilerOptions": {
      "baseUrl": "./",
      "paths": {
        "@ui": ["js/core/globals"],
        "@ui-layouts/*": ["src/layouts/*"],
        "@ui-components/*": ["src/components/*"],
        "@ui-utils/*": ["src/utils/*"],
        "@ui-icon/*": ["icon/*"],
        "@ui-less/*": ["less/*"],
        "@ui-js/*": ["js/*"],
      },
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "lib": [
        "dom" // fix: cannot find name 'localStorage' or any other built-in modules
      ],
      // for webpack magic comments
      "module": "esnext",
      "moduleResolution": "node",
    },
    "include": [
      "src/**/*.tsx",
      "src/**/*.ts",
      "index.d.ts",
    ],
}