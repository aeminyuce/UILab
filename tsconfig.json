{
  "compilerOptions": {
      "baseUrl": "./",
      "paths": {
        "@ui": ["js/core/globals"],
        "@layouts/*": ["src/layouts/*"],
        "@components/*": ["src/components/*"],
        "@utils/*": ["src/utils/*"],
        "@icon/*": ["icon/*"],
        "@less/*": ["less/*"],
        "@js/*": ["js/*"],
      },
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "lib": [
        "dom" // fix: cannot find name 'localStorage' or any other built-in modules
      ],
      // for webpack magic comments
      "module": "esnext",
      "moduleResolution": "node",
    },
    "include": [
      "src/**/*.tsx",
      "src/**/*.ts",
      "index.d.ts",
    ],
}